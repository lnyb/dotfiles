#!/bin/bash 

# Script to slect current screen layout using rofi -dmenu

layoutfolder=~/.local/bin/screenlayout/
selectedLayout=$(ls $layoutfolder | rofi -dmenu -p "screenlayout" -lines 3 -yoffset 0 -xoffset 0 )
echo $layoutfolder$selectedLayout;
[[ ! -f $layoutfolder$selectedLayout ]] && echo "layoutscript not found!" && exit 1
$layoutfolder$selectedLayout && wal -R; launchpolybar

exit 0 
